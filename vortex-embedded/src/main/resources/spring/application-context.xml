<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context.xsd">
	<!--
		Este archivo define los elementos generales de la configuración de
		beans para toda la aplicación
	-->
	
	<!--
		Indica que se deben escanear todas las clases del package en busca de
		beans. Esto declara implícitamente a
		AutowiredAnnotationBeanPostProcessor y
		CommonAnnotationBeanPostProcessor haciendo que no sea necesario el
		context:annotation-config
	-->
    <context:component-scan base-package="net.gaia" />

</beans>